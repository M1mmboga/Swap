<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:context="com.example.swap.ProfileActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:liftOnScrollTargetViewId="@id/main_content_container">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/temp_homepage_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/user_profile"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="User Profile" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/person24dp"
        android:paddingTop="5dp"
        android:paddingRight="70dp"
        android:text="name" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginLeft="-130dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/username"
        android:drawableLeft="@drawable/ic_mail_black_24dp"
        android:paddingTop="5dp"
        android:text="email" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="-87dp"
        android:layout_toRightOf="@id/username"
        android:drawableLeft="@drawable/phone24dp"
        android:paddingTop="5dp"
        android:text="phone" />


    <TextView
        android:id="@+id/inquiryMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:text="Got any questions? Email us swapteam19@gmail.com"
        android:paddingTop="30dp"
        android:autoLink="email"
        />

    <View
        android:id="@+id/passLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/inquiryMail"
        android:background="#f79862"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>
